<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="292dp"
        android:layout_height="371dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="124dp"
        android:background="#282828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="89dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/roboto"
        android:text="Una página web dedicada a los alumnos del CECyT 9 para conocer a otros estudiantes con gustos musicales similares."
        android:textAlignment="center"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="344dp"
        android:backgroundTint="#15883E"
        android:text="Iniciar Sesión"
        app:cornerRadius="100dp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="396dp"
        android:backgroundTint="#15883E"
        android:text="Registrarse"
        app:cornerRadius="100dp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="268dp"
        android:layout_height="22dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="464dp"
        android:fontFamily="@font/roboto"
        android:text="Nota: Para poder usar la aplicación necesitas tener una cuenta de Spotify."
        android:textColor="#15883E"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>